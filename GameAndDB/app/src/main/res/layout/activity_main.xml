<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorEditView"
            android:ems="10"
            android:hint="שם פרטי"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="תאריך"
            android:inputType="textPersonName"
            android:background="@color/colorEditView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvUser"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="17dp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="68dp"
            android:layout_height="33dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="0"
            android:background="@color/colorScoreView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="משחק כפל עד 100"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_margin="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvFirstNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/colorEditText"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/tvMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="x"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/tvSecNum"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@color/colorEditText"
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/tvEqual"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="="
            android:gravity="center"
            android:textColor="@color/colorText"/>
        <EditText
            android:id="@+id/etResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ems="5"
            android:gravity="center"
            android:inputType="number"
            android:hint="תשובה"
            android:background="@color/colorResultView"
            android:textColor="@color/colorText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1.3"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="@color/colorButtton"
            android:padding="3dp"
            android:text="בדוק והמשך"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonFont" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="15dp"
        tools:layout_editor_absoluteY="369dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/colorButtton"
            android:text="שלח EMAIL"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonFont"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.581" />

        " />
        />

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/colorButtton"
            android:text="שמור"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonFont"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.546"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" />
            />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

