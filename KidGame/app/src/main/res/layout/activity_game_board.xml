<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.borka.kidgame.GameBoard">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etresult"
            android:ems="6"
            android:textSize="35sp"
            android:textColor="#FFF"
            android:gravity="center"
            android:background="@drawable/editstylegil"
            android:inputType="number"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/laynumbers"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בדוק"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:background="@drawable/buttongil"
            android:layout_marginTop="55dp"
            android:id="@+id/btcheck"
            android:layout_below="@+id/etresult"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שמור"
            android:layout_marginTop="30dp"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:background="@drawable/buttongil"
            android:id="@+id/btsave"
            android:layout_below="@+id/btcheck"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/laynumbers"
            android:background="@drawable/gilborder"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="35sp"
                android:id="@+id/tvlnum"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_weight="1"
                android:gravity="center"

                android:textSize="35sp"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="35sp"
                android:id="@+id/tvrnum" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gilborder"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/tvscore" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="01/01/2017"
            android:id="@+id/tvdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="שם: "
            android:id="@+id/tvname" />

    </LinearLayout>

</RelativeLayout>