<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/colorAvtivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דף הרשמה"
            android:gravity="center"
            android:textColor="@color/colorCaption"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="First Name :"
            android:textColor="@color/colorTextView"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_margin="2dp"
            android:background="@color/colorEditText"
            android:layout_gravity="center"
            android:gravity="left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewFamily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Name :"
            android:textColor="@color/colorTextView"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_margin="2dp"
            android:background="@color/colorEditText"
            android:layout_gravity="center"
            android:gravity="left"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone Num :"
            android:textColor="@color/colorTextView"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:ems="10"
            android:inputType="phone"
            android:layout_margin="2dp"
            android:background="@color/colorEditText"
            android:layout_gravity="center"
            android:gravity="left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Name"
            android:textColor="@color/colorTextView"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_margin="2dp"
            android:background="@color/colorEditText"
            android:layout_gravity="center"
            android:gravity="left"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorAvtivity">

        <TextView
            android:id="@+id/textViewPswrd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PassWord"
            android:textColor="@color/colorTextView"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/editTextPswrd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:ems="10"
            android:inputType="numberPassword"
            android:layout_margin="2dp"
            android:background="@color/colorEditText"
            android:layout_gravity="center"
            android:gravity="left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorAvtivity">


        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorButtton"
            android:text="Save"
            android:textColor="@color/colorFontButton"/>
    </LinearLayout>
</LinearLayout>