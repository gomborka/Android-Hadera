<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.borka.targthread.MainActivity">

    <TextView
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:text="Show here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        android:id="@+id/textView"
        android:background="@color/colorAccent"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.502"
        android:gravity="center"/>

    <Button
        android:id="@+id/btAsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AsyncTask"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btPostDelayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PostDelyed"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PostThread"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btRunOnUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunOnUI"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btAsync"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handler"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btPost"
        app:layout_constraintLeft_toRightOf="@+id/btRunOnUI"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:textAllCaps="false"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/btRunOnUI"
        android:layout_marginRight="143dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextTimer"
        android:layout_width="65dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="..."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.501" />

</android.support.constraint.ConstraintLayout>
